                    data-price-plan-current-checkbox-off='2 446 ₽'
                    data-price-plan-current-checkbox-on='3 446 ₽'
                  )
                  .cost__checkbox-view
                  .cost__list
                    .cost__item Бесплатные занятия летом 2026
                    .cost__item Занятия в сентябре 2026
            a.cost__button.btn-orange(href='#') Начать обучение
        if mod === 'offer' || mod === 'offer-short'
          .cost__offer
            .cost__offer-title До конца специального предложения осталось:
            .offer-timer(date-end="2025-04-10T12:00:00")
              each item in [{number: '6', note: 'дней'},{number: '15', note: 'часов'},{number: '58', note: 'минут'},{number: '19', note: 'секунд'}]
                .offer-timer__box
                  .offer-timer__number= item.number
                  .offer-timer__note= item.note
