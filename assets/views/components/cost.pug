mixin cost (mod)
  .cost(class = mod ? mod : false id = mod !== 'shortest' ? 'pre-reg' : false data-btn-fixed-hide="true")
    .cost__cont.cont
      if mod === 'shortest' || mod === 'shortest-summer'
        a.cost__informer(href='#')
          .cost__informer-title Этот курс уже доступен к покупке на 25/26 учебный год
          button.cost__informer-button.btn-orange Подробнее
      if mod !== 'shortest' && mod !== 'shortest-summer'
        h2.cost__caption Стоимость годового абонемента
      .cost__wrap(class= mod ? `cost__wrap_${mod}` : false)
        if mod !== 'shortest' && mod !== 'shortest-summer'
          if mod !== 'short' && mod !== 'offer' && mod !== 'offer-short'
            .cost__area
              .cost__box
                .cost__name Пробная неделя
                .cost__text Доступ к обучению на 7 дней
                .cost__price
                  .cost__price-current 290 ₽
                  .cost__price-old 1 250 ₽
              .cost__title Что включено
              .cost__list
                .cost__item 2 онлайн-урока в неделю
                .cost__item Все занятия в записи
                .cost__item Личный тьютор-педагог 5 дней в неделю
                .cost__item Проверка домашних заданий к каждому уроку
                .cost__item Входное тестирование
                .cost__item.cost__item_minus Бесплатные занятия летом
                .cost__item!= '<span>Бонус:</span> набор полезных материалов по воспитанию детей'
              a.cost__button.btn-orange(href='#') Начать обучение
          .cost__area
            .cost__box.cost__box_blue
              if mod === 'offer' || mod === 'offer-short'
                .cost__tag Спецпредложение
              .cost__name Занятия онлайн + в записи
              .cost__text Рассрочка до 12 месяцев без банков и %
              .cost__price
                .cost__price-current(data-element="price-plan-current") 5 446 ₽
                if mod === 'offer' || mod === 'offer-short'
                  .cost__old-price(data-element="price-plan-old") 8 500 ₽
                .cost__price-period / в месяц
                .cost__discount Скидка 25%
              .cost__full-price
                span!= 'Полная оплата <b data-element="price-full-current">16 338 ₽</b>'
                if mod === 'offer' || mod === 'offer-short'
                  .cost__old-price(data-element="price-full-old") 32 338 ₽
                  .cost__discount Скидка 25%
            .cost__title Что включено
            .cost__list
              .cost__item 2 онлайн-урока в неделю с сентября май
              .cost__item Все занятия в записи
              .cost__item Личный тьютор-педагог 5 дней в неделю
              .cost__item Проверка домашних заданий по каждому уроку
              .cost__item Входное и ежемесячное тестирование
              .cost__item Бесплатные занятия летом
              .cost__item Набор полезных материалов для учёбы и развития ребёнка
            if mod === 'offer'
              .cost__additional
                label.cost__label
                  input.cost__checkbox(type='checkbox' name='additional_1' checked
                    new-href='new-href-link'
                    data-price-full-old-checkbox-off='31 338 ₽'
                    data-price-full-old-checkbox-on='32 338 ₽'
                    data-price-full-current-checkbox-off='15 338 ₽'
                    data-price-full-current-checkbox-on='16 338 ₽'
                    data-price-plan-old-checkbox-off='7 500 ₽'
                    data-price-plan-old-checkbox-on='8 500 ₽'
                    data-price-plan-current-checkbox-off='5 446 ₽'
                    data-price-plan-current-checkbox-on='6 446 ₽'
                  )
