form.blog-info-19(data-request-validate)
  .blog-info-19__title Пора ли переводить на&nbsp;семейное обучение?
  picture.blog-info-19__picture
    source(srcset=staticImg('blog-info-19/decor-1_xxs.svg') media="(max-width: 359px)")
    source(srcset=staticImg('blog-info-19/decor-1_mob.svg') media="(max-width: 743px)")
    source(srcset=staticImg('blog-info-19/decor-1_tablet.svg') media="(max-width: 1359px)")
