mixin schedule-stages(number)
  .schedule(data-stage-number=number class=number !== "1" ? "stage-block-hide" : false)
    .schedule__cont.cont
      .schedule__area
        h2.schedule__title
          | Расписание с&nbsp;сентября&nbsp;2025
          span.schedule__stages-tag!= `${number} ступень`
        .schedule__line
          .schedule__box
            .schedule__tags
              .schedule__tag Параллель 1
              .schedule__time Уроки по 45 мин
            .schedule__bottom
              .schedule__item
                b.schedule__note Понедельник
                .schedule__note в 16:30 Мск
              .schedule__item
                b.schedule__note Среда
                .schedule__note в 15:30 Мск
          .schedule__box
            .schedule__tags
              .schedule__tag Уроки по 45 мин
            .schedule__bottom
              .schedule__item
                b.schedule__note Понедельник
                .schedule__note в 16:30 Мск
              .schedule__item
                b.schedule__note Воскресенье
                .schedule__note в 15:30 Мск
          .schedule__orange
            .schedule__orange-title Занятия в записи
            .schedule__orange-text доступны через 1,5 часа после окончания онлайн-трансляции
