include ../_variables
include ../components/_layout/_connect-style
include ../components/_layout/_title

doctype html
html(lang='ru')
  head
    include ../components/_layout/_head
    +title('Курс ступени')
  body
    .sticky-header
      include ../components/_layout/header
      +header('stages')
    main.wrapper
      block body
        include ../components/course-cap
        +course-cap
        include ../components/stages/course-about
        +course-about('no-video', 'Как проходит этот курс', "1")
        +course-about('no-video', 'Как проходит этот курс', "2")
        include ../components/how
        +how('blue')
        include ../components/stages/schedule-stages
        +schedule-stages("1")
        include ../components/stages/schedule-stages
        +schedule-stages("2")
        include ../components/two-teach
        +two-teach
        include ../components/teacher
        +teacher
        include ../components/tutor
        +tutor
        include ../components/stages/cost
        +cost('short', "1")
        +cost('short', "2")
        include ../components/pre-reviews
        +pre-reviews
        include ../components/faq
        +faq
        include ../components/pre-end
        +pre-end('course','Время принять решение: оставить всё как есть или начать обучение, получить твёрдые знания и отличные оценки.',
          'Начать обучение')
        include ../components/btn-fixed
        +btn-fixed(false,'Получить консультацию',400,1700)
        include ../components/summer-fixed
    include ../components/modals/modal-order-new
    include ../components/_layout/footer
    include ../components/_layout/scripts
