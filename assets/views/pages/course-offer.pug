    include ../components/_layout/_head
    +title('Курс спецпредложение')
  body
    .sticky-header
      include ../components/trial-family-header
    main.wrapper
      include ../components/course-cap
      +course-cap('offer')
      include ../components/course-about
      +course-about('no-video')
      +course-about
      include ../components/how
      +how('blue', true)
      include ../components/schedule
      include ../components/schedule-small
      include ../components/schedule-smallest
      include ../components/two-teach
      +two-teach
      include ../components/teacher
      +teacher
      include ../components/tutor
      +tutor
      include ../components/cost-offer-1
      +cost-offer-1('short')
      include ../components/cost-offer-2
      +cost-offer-2('offer')
      include ../components/cost-offer-3
      +cost-offer-3('offer')
      //include ../components/pre-reviews
      //+pre-reviews
      include ../components/reviews
      include ../components/faq
      +faq
